<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_share_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="#ffff"

        app:layout_constraintCircle="@id/floatingActionButtonShare"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="90"

        app:srcCompat="@drawable/ic_baseline_message_24"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="#ffff"

        app:layout_constraintCircle="@id/floatingActionButtonShare"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="135"

        app:srcCompat="@drawable/ic_baseline_email_24"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="104dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="#ffff"

        app:layout_constraintCircle="@id/floatingActionButtonShare"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="180"

        app:srcCompat="@drawable/ic_baseline_arrow_downward_24"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="172dp" />
</androidx.constraintlayout.widget.ConstraintLayout>